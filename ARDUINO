#include <LiquidCrystal.h>
LiquidCrystal lcd(13, 12, 11, 10, 9, 8);

#include <SoftwareSerial.h>
SoftwareSerial mySerial(7, 6); // RX, TX

int buttonState = 0;         // variable for reading the pushbutton status

int sensorPin = A5;    // select the input pin for the potentiometer
int sensorValue = 0;  // variable to store the value coming from the sensor
int count=0,fl;
unsigned long time1=0;  // store the initial time
unsigned long time2;    // store the current time
  int count1,count2;

int sensorValue1 = 0;        // value read from the pot
int sensorValue2 = 0;        // value read from the pot
int sensorValue3 = 0;        // value read from the pot
int sensorValue4 = 0;        // value read from the pot
int sensorValue5 = 0;        // value read from the pot

void setup() {
 pinMode(2, OUTPUT);
 digitalWrite(2,0);
   
  Serial.begin(9600);
  lcd.begin(16, 2);
}

char oc,o2;


void loop() {
  // read the analog in value:

  sensorValue1 = analogRead(A0)/2;  
  sensorValue1 = analogRead(A0)/18;  
  sensorValue2 = analogRead(A1)/2;  
  sensorValue3 = analogRead(A2)/2;  
  sensorValue4 = analogRead(A3)/2;  

  lcd.setCursor(0, 0);
  lcd.print("T:");
  lcd.write((sensorValue1/100)+0x30);      
  lcd.write(((sensorValue1%100)/10)+0x30);      
  lcd.write((sensorValue1%10)+0x30);      

  if(sensorValue2<=100)
  {
    sensorValue2=80+(rand()%40);
  }
   else
   {
    sensorValue2=0;
   }

  lcd.setCursor(8, 0);
  lcd.print("Sp:");
  lcd.write((sensorValue2/100)+0x30);      
  lcd.write(((sensorValue2%100)/10)+0x30);      
  lcd.write((sensorValue2%10)+0x30);      

  lcd.setCursor(0, 1);
  lcd.print("S");
  lcd.write((sensorValue3/100)+0x30);      
  lcd.write(((sensorValue3%100)/10)+0x30);      
  lcd.write((sensorValue3%10)+0x30);      

  lcd.setCursor(5, 1);
  lcd.print("V");
  lcd.write((sensorValue4/100)+0x30);      
  lcd.write(((sensorValue4%100)/10)+0x30);      
  lcd.write((sensorValue4%10)+0x30);      


 
 if(sensorValue1>40)
    digitalWrite(2,0);
  else if(sensorValue2>100)
    digitalWrite(2,0);
  else if(sensorValue3>100)
    digitalWrite(2,0);
  else if(sensorValue4<120)
    digitalWrite(2,0);
  else
    digitalWrite(2,1);


if(oc==0)
{
  oc=60;
  Serial.print("*Temp=");
  Serial.print(sensorValue1);
  Serial.print("_Speed=");
  Serial.print(sensorValue2);
  Serial.print("_Sound=");
  Serial.print(sensorValue3);
  Serial.print("_Vib=");
  Serial.print(sensorValue4);
  if(sensorValue1>50)
    Serial.print("~2");
  else if(sensorValue2>100)
    Serial.print("~2");
  else if(sensorValue3>100)
    Serial.print("~2");
  else if(sensorValue4<120)
    Serial.print("~2");
  else if(sensorValue1>40)
    Serial.print("~1");
  else if(sensorValue3>80)
    Serial.print("~1");  
  else
    Serial.print("~0");
  Serial.print('#');    
}

delay(300);
   
oc--;


}
